{
  "name": "otak-clock",
  "displayName": "otak-clock",
  "description": "This VSCode extension displays the date and time for two time zones from around the world.",
  "publisher": "odangoo",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsuyoshi-otake/otak-clock"
  },
  "bugs": {
    "url": "https://github.com/tsuyoshi-otake/otak-clock/issues"
  },
  "homepage": "https://github.com/tsuyoshi-otake/otak-clock#readme",
  "version": "1.1.32",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "otak-clock.selectTimeZone1",
        "title": "%command.selectTimeZone1%"
      },
      {
        "command": "otak-clock.selectTimeZone2",
        "title": "%command.selectTimeZone2%"
      },
      {
        "command": "otak-clock.swapTimeZones",
        "title": "%command.swapTimeZones%"
      },
      {
        "command": "otak-clock.setAlarm",
        "title": "%command.setAlarm%"
      },
      {
        "command": "otak-clock.toggleAlarm",
        "title": "%command.toggleAlarm%"
      },
      {
        "command": "otak-clock.editAlarm",
        "title": "%command.editAlarm%"
      },
      {
        "command": "otak-clock.deleteAlarm",
        "title": "%command.deleteAlarm%"
      },
      {
        "command": "otak-clock.listAlarms",
        "title": "%command.manageAlarm%"
      }
    ],
    "configuration": {
      "title": "otak-clock",
      "properties": {
        "otak-clock.showTimeZoneInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "%config.showTimeZoneInStatusBar%",
          "scope": "application"
        },
        "otak-clock.alarmSoundEnabled": {
          "type": "boolean",
          "default": true,
          "description": "%config.alarmSoundEnabled%",
          "scope": "application"
        },
        "otak-clock.alarmSoundType": {
          "type": "string",
          "default": "classic-alarm",
          "enum": [
            "classic-alarm",
            "snake-ish"
          ],
          "enumDescriptions": [
            "%config.alarmSoundType.classic%",
            "%config.alarmSoundType.snake%"
          ],
          "description": "%config.alarmSoundType%",
          "scope": "application"
        },
        "otak-clock.alarmTimeZone": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "UTC",
            "Etc/GMT",
            "America/Anchorage",
            "America/Los_Angeles",
            "America/Denver",
            "America/Chicago",
            "America/New_York",
            "America/Toronto",
            "America/Mexico_City",
            "America/Sao_Paulo",
            "America/Argentina/Buenos_Aires",
            "Europe/London",
            "Europe/Paris",
            "Europe/Berlin",
            "Europe/Rome",
            "Europe/Madrid",
            "Europe/Zurich",
            "Europe/Moscow",
            "Africa/Cairo",
            "Africa/Nairobi",
            "Asia/Riyadh",
            "Asia/Dubai",
            "Asia/Tehran",
            "Asia/Kolkata",
            "Asia/Dhaka",
            "Asia/Bangkok",
            "Asia/Ho_Chi_Minh",
            "Asia/Jakarta",
            "Asia/Kuala_Lumpur",
            "Asia/Singapore",
            "Asia/Shanghai",
            "Asia/Hong_Kong",
            "Asia/Taipei",
            "Asia/Manila",
            "Asia/Seoul",
            "Asia/Tokyo",
            "Australia/Perth",
            "Australia/Adelaide",
            "Australia/Sydney",
            "Australia/Melbourne",
            "Australia/Brisbane",
            "Pacific/Auckland"
          ],
          "enumDescriptions": [
            "%config.alarmTimeZone.auto%",
            "UTC (UTC+00:00)",
            "GMT (UTC+00:00)",
            "Alaska / Anchorage (UTC-09:00)",
            "US Pacific / Los Angeles (UTC-08:00)",
            "US Mountain / Denver (UTC-07:00)",
            "US Central / Chicago (UTC-06:00)",
            "US Eastern / New York (UTC-05:00)",
            "Canada / Toronto (UTC-05:00)",
            "Mexico / Mexico City (UTC-06:00)",
            "Brazil / Sao Paulo (UTC-03:00)",
            "Argentina / Buenos Aires (UTC-03:00)",
            "UK / London (UTC+00:00)",
            "France / Paris (UTC+01:00)",
            "Germany / Berlin (UTC+01:00)",
            "Italy / Rome (UTC+01:00)",
            "Spain / Madrid (UTC+01:00)",
            "Switzerland / Zurich (UTC+01:00)",
            "Russia / Moscow (UTC+03:00)",
            "Egypt / Cairo (UTC+02:00)",
            "Kenya / Nairobi (UTC+03:00)",
            "Saudi Arabia / Riyadh (UTC+03:00)",
            "UAE / Dubai (UTC+04:00)",
            "Iran / Tehran (UTC+03:30)",
            "India / New Delhi (UTC+05:30)",
            "Bangladesh / Dhaka (UTC+06:00)",
            "Thailand / Bangkok (UTC+07:00)",
            "Vietnam / Ho Chi Minh (UTC+07:00)",
            "Indonesia / Jakarta (UTC+07:00)",
            "Malaysia / Kuala Lumpur (UTC+08:00)",
            "Singapore (UTC+08:00)",
            "China / Beijing (UTC+08:00)",
            "Hong Kong (UTC+08:00)",
            "Taiwan / Taipei (UTC+08:00)",
            "Philippines / Manila (UTC+08:00)",
            "Korea / Seoul (UTC+09:00)",
            "Japan / Tokyo (UTC+09:00)",
            "Australia / Perth (UTC+08:00)",
            "Australia / Adelaide (UTC+09:30)",
            "Australia / Sydney (UTC+10:00)",
            "Australia / Melbourne (UTC+10:00)",
            "Australia / Brisbane (UTC+10:00)",
            "New Zealand / Auckland (UTC+12:00)"
          ],
          "description": "%config.alarmTimeZone%",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && node -e \"require('fs').cpSync('src/i18n/locales', 'out/i18n/locales', {recursive: true})\"",
    "watch": "node -e \"require('fs').cpSync('src/i18n/locales', 'out/i18n/locales', {recursive: true})\" && tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  }
}
